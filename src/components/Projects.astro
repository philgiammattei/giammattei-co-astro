---
import { type CollectionEntry } from "astro:content";
interface Props {
  projects: CollectionEntry<"projects">[];
}
const { projects } = Astro.props;
---

<section class="projects">
  {
    projects.map((project) => (
      <div class="project">
        <a href={`/projects/${project.slug}`}>
          <img src={project.data.heroImage} alt={project.data.title} />
        </a>
        <h3>
          <a href={`/projects/${project.slug}`}>{project.data.title}</a>
        </h3>
      </div>
    ))
  }
</section>
<style>
  .projects {
    display: flex;
    flex-wrap: wrap;
    column-gap: 1rem;
  }
  .project {
    max-width: 300px;
    margin: 30px auto 0;
    position: relative;
  }
  .projectheading {
    text-align: left;
  }

  .project .overlay {
    display: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.5);
  }
  .project:hover {
    .overlay {
      display: block;
    }
  }
  .project img {
    display: block;
    width: 300px;
    height: 300px;
    object-fit: cover;
    margin: auto;
    border: 3px solid #eb9fc3;
    border-radius: 10px;
    box-shadow:
      0 8px 16px 0 rgba(0, 0, 0, 0.2),
      0 6px 20px 0 rgba(0, 0, 0, 0.19);
  }
</style>
