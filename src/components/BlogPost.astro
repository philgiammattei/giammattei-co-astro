---
import FormattedDate from "../components/FormattedDate.astro";
const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<article>
  <div class="prose">
    <div class="title">
      <h1>{title}</h1>
      <div class="date">
        <FormattedDate date={pubDate} />
        {
          updatedDate && (
            <div class="last-updated-on">
              Last updated on <FormattedDate date={updatedDate} />
            </div>
          )
        }
      </div>
      <div class="hero-image">
        {heroImage && <img width={1020} height={510} src={heroImage} alt="" />}
      </div>

      <hr />
    </div>
    <div class="content">
      <slot />
    </div>
  </div>
  <style>
    .hero-image {
      width: 100%;
    }
    .hero-image img {
      display: block;
      margin: 0 auto;
      border-radius: 12px;
      box-shadow: var(--box-shadow);
    }
    .prose {
      width: 720px;
      max-width: calc(100% - 2em);
      margin: auto;
      padding: 1em;
      color: rgb(var(--gray-dark));
    }

    .content {
      text-align: left;
    }
    .title {
      text-align: center;
      line-height: 1;
    }
    .title h1 {
      margin: 0 0 0.5em 0;
    }
    .date {
      margin-bottom: 2rem;
      color: rgb(var(--gray));
    }
    .last-updated-on {
      font-style: italic;
    }
  </style>
</article>
